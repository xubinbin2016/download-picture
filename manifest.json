{
  "manifest_version": 3,
  "name": "Download Picture",
  "description": "下载qq空间图片",
  "version": "1.0",
  "action": {
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "downloads",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "https://h5.qzone.qq.com/*",
    "https://user.qzone.qq.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://h5.qzone.qq.com/*",
        "https://user.qzone.qq.com/*"
      ],
      "js": [
        "jszip.js",
        "FileSaver.js",
        "axios.js",
        "contentScript.js"
      ]
    }
  ]
}